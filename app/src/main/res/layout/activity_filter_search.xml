<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquisar um filtro ou tag..."
        android:padding="16dp"
        android:minHeight="48dp" /> <!-- Garante um tamanho mínimo para a área de toque -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtros disponíveis:"
        android:paddingTop="16dp"
        tools:ignore="HardcodedText" />

    <GridLayout
        android:id="@+id/filterGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:paddingTop="8dp"
        android:padding="8dp">

        <!-- Botões de filtro com IDs adicionados -->
        <Button
            android:id="@+id/filterButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eletrônico"/>

        <Button
            android:id="@+id/filterButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fiação"/>

        <Button
            android:id="@+id/filterButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chuveiro"/>

        <Button
            android:id="@+id/filterButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="instalação"/>

        <Button
            android:id="@+id/filterButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cozinha"/>

        <Button
            android:id="@+id/filterButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="concerto"/>
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpar"
            android:layout_marginTop="13dp"
            android:layout_gravity="left"
            android:textColor="@android:color/white"
            tools:ignore="RtlHardcoded" />

    </GridLayout>

    <!-- RecyclerView para exibir os serviços filtrados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/serviceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
